{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "serve",
            "type": "npm",
            "script": "serve",
            "options": {
                "cwd": "${workspaceFolder}/tutteo-app"
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
                    "regexp": "^$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Starting development server",
                    "endsPattern": "App running at:"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "group": "dev"
            }
        },
        {
            "label": "build",
            "type": "npm",
            "script": "build",
            "options": {
                "cwd": "${workspaceFolder}/tutteo-app"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "group": "dev"
            }
        },
        {
            "label": "lint",
            "type": "npm",
            "script": "lint",
            "options": {
                "cwd": "${workspaceFolder}/tutteo-app"
            },
            "problemMatcher": ["$eslint-stylish"],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "group": "dev"
            }
        },
        {
            "label": "install",
            "type": "npm",
            "script": "install",
            "options": {
                "cwd": "${workspaceFolder}/tutteo-app"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "group": "dev"
            }
        },
        {
            "label": "clean install",
            "type": "shell",
            "command": "cd tutteo-app && rm -rf node_modules && npm install",
            "windows": {
                "command": "cd tutteo-app && rmdir /s /q node_modules && npm install"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "group": "dev"
            }
        }
    ]
}